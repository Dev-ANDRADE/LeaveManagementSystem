@model IEnumerable<LeaveManagementSystem.Models.LeaveRequest>

@{
    ViewBag.Title = "ViewMyRequests";
}



@if (TempData["count"].ToString() != "0")
{
    <h2>My Requests</h2>
    

    <div class="table-responsive">


        <table id="drivers" class="table table-bordered table-hover">
            <thead>
                <tr>

                    <th>First name</th>
                    <th>Lastname</th>
                    <th>Start date</th>
                    <th>End date</th>
                    <th>Leave type</th>
                    <th>Reason</th>
                    <th>Total days</th>
                    <th>Remaining leave days</th>
                    <th>Request status</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>

                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                        <td>@item.LeaveType</td>
                        <td>@item.Reason</td>
                        <td>@item.TotalDays</td>
                        <td>@item.RemainingLeaveDays</td>
                        <td>@item.RequestStatus</td>



                    </tr>
                }
            </tbody>
        </table>


    </div>
}
else
{
    <h2 class="text-success" style="margin-bottom: 3em;">You currenlty do not have any requests for leave.</h2>
    @Html.ActionLink("Apply here", "Create", "LeaveManagement","", new {@class= "btn btn-primary"})
}



